<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RatingUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">8sp</item>
        <item name="android:maxHeight">8sp</item>
    </style>
    <style name="RatingBar2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/raitngbar_full_2</item>
        <item name="android:minHeight">10sp</item>
        <item name="android:maxHeight">10sp</item>
    </style>



</resources>